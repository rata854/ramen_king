<% if store.store_comments.present? %>
  <div id="rate_<%= store.id %>"></div>
    <p>口コミ<%= store.store_comments.count %>件</p>
    <script>
      $('#rate_<%= store.id %>').empty();
        $('#rate_<%= store.id %>').raty({
          size: 20,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf: '<%= asset_path('star-half.png') %>',
          half: true,
          readOnly: true,
          score: <%= store.store_comments.average(:rate).round(2) %>,
        });
    </script>
<% else %>
  <p>口コミ0件</p>
<% end %>