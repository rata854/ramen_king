<div class='container'>
  <div class='row'>
    <div class="col-sm-12 mx-auto">

      <div class="row justify-content-between">
        <div class="col-4"><h4><%= @store.store_name %></4></div>
          <% if user_signed_in? %>
            <%= link_to "店舗情報編集", edit_store_path %>
          <% end %>
      </div>
      <p>星評価</p>
      <p><%= @store.address %></p>


      <table class="table">
        <tr>
          <th>店舗名</th><td><%= @store.store_name %></td>
        </tr>
        <tr>
          <th>店舗紹介</th><td><%= @store.store_introduction%></td>
        </tr>
        <tr>
          <th>住所</th><td><%= @store.postal_code%><%= @store.address %></td>
        </tr>
        <tr>
          <th>交通手段</th><td><%= @store.transportation %></td>
        </tr>
        <tr>
          <th>営業日</th><td><%= @store.business_day %></td>
        </tr>
        <tr>
          <th>定休日</th><td><%= @store.holiday %></td>
        </tr>
      </table>
      <%= link_to "新規口コミ作成", new_store_store_comment_path(@store.id) %>
